<!-- This view shows the user that the task has successfully been submitted, along with the taks info -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/style.css">
    <script src="scripts/script.js" defer></script>
    <title>Confirmation</title>
</head>
<body>
    <!-- Header div -->
    <div id="header">
        <div class="left-right-header">
        </div>
        <div class="middle-header">
            <a href="/"><h1>Submitted</h1></a>
        </div>
        <div class="left-right-header">
            <button id="nav-button"><img src="images/menu2.png" width="40" alt="menu button" id="nav"></button> 
        </div>
    </div>
    <div class="dropdiv">
        <ul class="dropdown">
            <li><a href="add">Add Task</a></li>
            <li><a href="/">View Current Tasks</a></li>
            <li><a href="completed">Completed Tasks</a></li>
            <li><a href="deleted">Deleted Tasks</a></li>
        </ul>
    </div> 
    <!-- Task info section -->
    <div class="add-card">
        <h3><%= newTask.title %></h3>
        <!-- Displays the info from the newly submitted task -->
        <div class="info-div">
            <div class="value-div">
                <p class="label">Date Due: </p><p class="value"><%= newTask.dateDue %></p>
            </div>
            
            <div class="value-div">
                <p class="label">Priority: </p><p class="value"><%= newTask.priority %></p>
            </div>
            <!-- Checks if there is a description to evaluate the need for a colored background -->
            <% if (newTask.description) { %>
                <div class="value-div description">
                    <p class="description"><%= newTask.description %></p>   
                </div>  
            <% } %>
        </div>
    </div>
    <!-- Footer button -->
    <a href="/"><button class="completed-button go-back-on-add">Go Back</button></a>
</body>
</html>


    